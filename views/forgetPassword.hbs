<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forget Password</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .forget-password-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }
        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }
        .input-group {
            margin-bottom: 20px;
        }
        .input-group label {
            display: block;
            font-size: 14px;
            margin-bottom: 5px;
            color: #555;
        }
        .input-group input {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
            outline: none;
        }
        .reset-btn {
            width: 100%;
            padding: 12px;
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .reset-btn:hover {
            background-color: #45a049;
        }
        .links {
            text-align: center;
            margin-top: 15px;
        }
        .links a {
            display: inline-block;
            font-size: 14px;
            color: #007BFF;
            text-decoration: none;
            margin: 5px;
        }
        .links a:hover {
            text-decoration: underline;
        }
        @media (min-width: 768px) {
            .forget-password-container {
                max-width: 500px;
                padding: 50px;
            }
            h2 {
                font-size: 28px;
            }
            .reset-btn {
                padding: 15px;
                font-size: 18px;
            }
        }
    </style>
</head>
<body>
    <div class="forget-password-container">
        <form class="forget-password-form">
            <h2>Forget Password</h2>
            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" id="email" placeholder="Enter your email" required />
            </div>
            <button class="reset-btn" id="reset-password-btn">Reset Password</button>
            <div class="links">
                <a href="/" class="login-link">Back to Login</a>
            </div>
        </form>
    </div>

    <script>
        document.getElementById("reset-password-btn").addEventListener("click", async function(event) {
            try {
                event.preventDefault();
                const emailOfUser = document.getElementById('email')?.value;
                console.log(emailOfUser)
                await fetch(`{{url}}/auth/forgetPasswordData`, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ emailOfUser })
                }).then((res) => res.json()).then((data) => { console.log(data); });
            } catch (error) {
                console.log("Error in sending data to express : ", error);
            }
        });
    </script>
</body>
</html>